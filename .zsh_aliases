# git add | commit | pull | push all in one
function git_ultimate {
   lint_result=$(echo "$*" | commitlint | grep âœ–)

   if [[ -z $lint_result ]] then
      git add .
      git commit -m "$*"
      git pull
      git push
   else
      echo "commit msg not valid:"
      echo $lint_result
   fi
}

alias ggu="noglob git_ultimate"

